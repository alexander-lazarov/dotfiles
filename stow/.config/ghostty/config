# automatically switch the theme based on light/dark mode of the OS
theme = dark:Bluloco Dark,light:Bluloco Light

# clear screen with ctrl+k
keybind = ctrl+k=clear_screen

# enable copy on select
copy-on-select = true

# hack for better performance of macos animations
background-opacity = 0.999

# cursor shader
custom-shader = shaders/cursor_blaze.glsl
